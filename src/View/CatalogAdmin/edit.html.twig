{% extends 'layout_admin.html.twig' %}

{% block title %}
    Catalogue | Modifier
{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/css/catalog.css">
    <link rel="stylesheet" href="/assets/css/catalogAdmin.css">
{% endblock %}

{% block content %}
    <header class="header">
        <div class="container h-100 justify-around">
            <div class="row h-75 align-items-center">
                <div class="col-12">
                    <div class="block-title-page">
                        <img class="icon" src="/assets/images/catalog/{{ element.type_name }}_icon.png" alt="">
                        <h1>{{ element.common_name }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main>
        <section class="catalog-section">
            <div class="container">
                <div class="row message-box">
                    <div class="col-12">
                        {% if errors is not empty %}
                            <div class="alert alert-danger">
                                <ul>
                                    {% for error in errors %}
                                        <li>{{ error }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-6">
                        {% include 'CatalogAdmin/_form.html.twig' %}
                    </div>
                </div>
            </div>
        </section>

        <div class="mt-3 mb-4">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <a class="btn btn-primary" href="/catalogAdmin/index">
                            Retourner à la page précédente
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}